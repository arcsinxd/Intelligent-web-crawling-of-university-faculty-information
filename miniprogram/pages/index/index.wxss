/* pages/index/index.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #0056b3;
}

.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.admin-title {
  color: #d9534f;
}

.section-content {
  display: flex;
  flex-direction: column;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.warning {
  background-color: #fff3cd;
  border: 2rpx solid #ffc107;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.warning text {
  font-size: 24rpx;
  color: #856404;
  line-height: 1.5;
}

.btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-bottom: 30rpx;
}

.btn-primary {
  background-color: #337ab7;
  color: #fff;
}

.btn-primary[disabled] {
  background-color: #ccc;
  color: #999;
}

.status {
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  display: none;
}

.status-running {
  background-color: #f0ad4e;
  color: #fff;
  display: block;
}

.status-finished {
  background-color: #5cb85c;
  color: #fff;
  display: block;
}

.status-error {
  background-color: #d9534f;
  color: #fff;
  display: block;
}

.nav-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.nav-btn {
  background-color: #f8f9fa;
  border: 2rpx solid #dee2e6;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #0056b3;
}

.nav-btn text {
  font-weight: bold;
}

/* 教师列表样式 */
.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.list-count {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.search-link {
  font-size: 26rpx;
  color: #0056b3;
  text-decoration: underline;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.teacher-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 20rpx;
}

.teacher-card {
  background-color: #f8f9fa;
  border: 2rpx solid #dee2e6;
  border-radius: 12rpx;
  padding: 30rpx;
}

.teacher-name {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.teacher-name .name {
  font-size: 36rpx;
  font-weight: bold;
  color: #0056b3;
  margin-right: 10rpx;
}

.teacher-name .title {
  font-size: 24rpx;
  color: #666;
}

.teacher-info {
  margin-bottom: 15rpx;
}

.info-item {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.teacher-link {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #dee2e6;
}

.teacher-link navigator,
.teacher-link .link-text {
  color: #0056b3;
  font-size: 26rpx;
  text-decoration: underline;
}

.teacher-link .link-text {
  cursor: pointer;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.load-more {
  margin-top: 30rpx;
  text-align: center;
}

.btn-load-more {
  background-color: #f8f9fa;
  color: #0056b3;
  border: 2rpx solid #0056b3;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

