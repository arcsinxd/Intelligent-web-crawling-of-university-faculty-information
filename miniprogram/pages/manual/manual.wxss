/* pages/manual/manual.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #0056b3;
}

.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.admin-title {
  color: #d9534f;
}

.section-content {
  display: flex;
  flex-direction: column;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-bottom: 30rpx;
}

.btn-primary {
  background-color: #d9534f;
  color: #fff;
}

.btn-primary[disabled] {
  background-color: #ccc;
  color: #999;
}

.status {
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  display: none;
}

.status-running {
  background-color: #f0ad4e;
  color: #fff;
  display: block;
}

.status-finished {
  background-color: #5cb85c;
  color: #fff;
  display: block;
}

.status-error {
  background-color: #d9534f;
  color: #fff;
  display: block;
}

.recipe-result {
  margin-top: 30rpx;
  padding: 30rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border: 2rpx solid #dee2e6;
}

.recipe-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.recipe-content {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}

.recipe-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.8;
  word-break: break-all;
  white-space: pre-wrap;
}

